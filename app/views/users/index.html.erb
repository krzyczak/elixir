<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Company name</th>
    <th>Street</th>
    <th>Street no</th>
    <th>Postal code</th>
    <th>City</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.company_name %></td>
    <td><%= user.street %></td>
    <td><%= user.street_no %></td>
    <td><%= user.postal_code %></td>
    <td><%= user.city %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

